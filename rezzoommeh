<div id="loading">
    <div class="spinner"></div>
    <p style="margin-top:10px; font-size:14px; color:#666">در حال آماده‌سازی...</p>
</div>

<div class="editor-sidebar">
    <div class="sidebar-header">
        <h2>رزومه ساز حرفه‌ای</h2>
        <button class="btn-success" style="width:auto; padding:5px 15px;" onclick="window.print()"><i class="fas fa-print"></i> دانلود</button>
    </div>

    <div class="sidebar-content">
        <div class="group-box">
            <h4><i class="fas fa-palette"></i> رنگ‌بندی</h4>
            <div style="display:flex; gap:10px;">
                <input type="color" id="col1" value="#2563eb" oninput="setColors()" style="height:40px; width:50%">
                <input type="color" id="col2" value="#0ea5e9" oninput="setColors()" style="height:40px; width:50%">
            </div>
        </div>

        <div class="group-box">
            <h4><i class="fas fa-user"></i> مشخصات فردی</h4>
            <input placeholder="نام و نام خانوادگی" id="in_name" oninput="up('name',this.value)">
            <input placeholder="عنوان شغلی" id="in_job" oninput="up('job',this.value)">
            <textarea placeholder="درباره من..." rows="3" id="in_about" oninput="up('about',this.value)"></textarea>
            <button class="btn btn-outline" onclick="document.getElementById('f_img').click()">آپلود عکس</button>
            <input type="file" id="f_img" hidden onchange="upImg(this)">
        </div>

        <div class="group-box">
            <h4><i class="fas fa-phone"></i> تماس</h4>
            <input placeholder="موبایل" id="in_phone" oninput="up('phone',this.value)">
            <input placeholder="ایمیل" id="in_email" oninput="up('email',this.value)">
            <input placeholder="آدرس" id="in_addr" oninput="up('addr',this.value)">
        </div>

        <div class="group-box">
            <h4>سوابق شغلی <button class="btn-success" style="float:left; width:auto; padding:2px 8px" onclick="add('works')">+</button></h4>
            <div id="list_works"></div>
        </div>

        <div class="group-box">
            <h4>تحصیلات <button class="btn-success" style="float:left; width:auto; padding:2px 8px" onclick="add('edus')">+</button></h4>
            <div id="list_edus"></div>
        </div>

        <div class="group-box">
            <h4>مهارت‌ها <button class="btn-success" style="float:left; width:auto; padding:2px 8px" onclick="add('skills')">+</button></h4>
            <div id="list_skills"></div>
        </div>
        
        <button class="btn btn-outline" onclick="saveJson()">ذخیره پروژه</button>
        <button class="btn btn-outline" onclick="document.getElementById('f_load').click()">باز کردن پروژه</button>
        <input type="file" id="f_load" hidden onchange="loadJson(this)">
    </div>
</div>

<div class="preview-wrapper" id="prevWrap">
    <div id="renderZone"></div>
    
    <div class="zoom-controls">
        <button class="zoom-btn" onclick="zoom(-0.1)"><i class="fas fa-minus"></i></button>
        <span id="zoomTxt" style="font-size:13px; font-weight:bold; width:40px; text-align:center">Auto</span>
        <button class="zoom-btn" onclick="zoom(0.1)"><i class="fas fa-plus"></i></button>
    </div>
</div>

<script>
    // --- داده‌های اولیه ---
    let data = {
        name: "دانیال یوسفی",
        job: "برنامه‌نویس Full Stack",
        about: "علاقه‌مند به توسعه نرم‌افزار با تمرکز بر رابط کاربری و تجربه کاربری. توانایی حل مسئله و کار تیمی بالا.",
        phone: "09121234567",
        email: "daniyal@mail.com",
        addr: "تهران، ایران",
        photo: "",
        works: [
            { id: 1, title: "توسعه دهنده وب", sub: "شرکت پیشگامان", date: "1401 - اکنون", desc: "طراحی و پیاده‌سازی پنل‌های مدیریتی با React." }
        ],
        edus: [
            { id: 1, title: "مهندسی کامپیوتر", sub: "دانشگاه آزاد", date: "1397 - 1401", desc: "معدل الف" }
        ],
        skills: [
            { id: 1, title: "HTML/CSS", val: 95 },
            { id: 2, title: "JavaScript", val: 80 }
        ]
    };

    // --- توابع اصلی ---
    function up(k, v) { data[k] = v; render(); }
    function upImg(el) {
        if(el.files[0]) {
            let r = new FileReader();
            r.onload = e => { data.photo = e.target.result; render(); };
            r.readAsDataURL(el.files[0]);
        }
    }
    function setColors() {
        document.documentElement.style.setProperty('--primary-color', document.getElementById('col1').value);
        document.documentElement.style.setProperty('--secondary-color', document.getElementById('col2').value);
    }

    // --- مدیریت لیست‌ها ---
    function add(type) {
        let item = type === 'skills' 
            ? { id: Date.now(), title: "مهارت", val: 50 }
            : { id: Date.now(), title: "عنوان", sub: "زیرعنوان", date: "تاریخ", desc: "توضیحات" };
        data[type].push(item);
        renderInputs(); render();
    }
    function del(type, id) {
        data[type] = data[type].filter(x => x.id != id);
        renderInputs(); render();
    }
    function upList(type, id, k, v) {
        let f = data[type].find(x => x.id == id);
        if(f) { f[k] = v; render(); }
    }

    // --- رندر ورودی‌ها ---
    function renderInputs() {
        document.getElementById('in_name').value = data.name || "";
        document.getElementById('in_job').value = data.job || "";
        document.getElementById('in_about').value = data.about || "";
        document.getElementById('in_phone').value = data.phone || "";
        document.getElementById('in_email').value = data.email || "";
        document.getElementById('in_addr').value = data.addr || "";

        const mkList = (t, skill) => {
            let h = "";
            data[t].forEach(x => {
                if(skill) {
                    h += `<div style="display:flex; gap:5px; margin-bottom:5px">
                            <input value="${x.title}" oninput="upList('${t}',${x.id},'title',this.value)" placeholder="نام">
                            <input type="number" value="${x.val}" oninput="upList('${t}',${x.id},'val',this.value)" style="width:60px">
                            <button class="btn-danger" onclick="del('${t}',${x.id})">X</button>
                          </div>`;
                } else {
                    h += `<div style="background:#f1f5f9; padding:10px; border-radius:5px; margin-bottom:8px;">
                            <input value="${x.title}" oninput="upList('${t}',${x.id},'title',this.value)" placeholder="عنوان" style="font-weight:bold">
                            <div style="display:flex; gap:5px">
                                <input value="${x.sub}" oninput="upList('${t}',${x.id},'sub',this.value)">
                                <input value="${x.date}" oninput="upList('${t}',${x.id},'date',this.value)">
                            </div>
                            <textarea oninput="upList('${t}',${x.id},'desc',this.value)" rows="2">${x.desc}</textarea>
                            <button class="btn-danger" onclick="del('${t}',${x.id})">حذف آیتم</button>
                          </div>`;
                }
            });
            document.getElementById('list_' + t).innerHTML = h;
        };
        mkList('works', false); mkList('edus', false); mkList('skills', true);
    }

    // --- موتور رندر رزومه (صفحه‌بندی هوشمند) ---
    function render() {
        const zone = document.getElementById('renderZone');
        zone.innerHTML = "";

        const newPage = (idx) => {
            let d = document.createElement('div');
            d.className = 'a4-page';
            d.innerHTML = `
                ${idx === 0 ? `
                <div class="header-top">
                    <div class="shape-2"></div>
                    <div class="shape-1"></div>
                    <div class="header-content">
                        <div class="header-txt">
                            <h1>${data.name}</h1>
                            <p>${data.job}</p>
                        </div>
                        ${data.photo ? `<img src="${data.photo}" class="user-photo">` : ''}
                    </div>
                </div>` : '<div style="height:30px"></div>'}
                
                <div class="main-body">
                    <div class="col-side" id="side-${idx}"></div>
                    <div class="col-main" id="main-${idx}"></div>
                </div>
            `;
            return d;
        };

        let pages = [], cur = 0;
        pages.push(newPage(0));
        zone.appendChild(pages[0]);

        // پر کردن سایدبار (فرض: جا می‌شود)
        let side = pages[0].querySelector('#side-0');
        let cHtml = `<div class="sec-head"><i class="fas fa-address-book"></i> تماس</div>`;
        if(data.phone) cHtml += `<div class="contact-row"><span>${data.phone}</span> <i class="fas fa-mobile"></i></div>`;
        if(data.email) cHtml += `<div class="contact-row"><span>${data.email}</span> <i class="fas fa-envelope"></i></div>`;
        if(data.addr) cHtml += `<div class="contact-row"><span>${data.addr}</span> <i class="fas fa-map-marker-alt"></i></div>`;
        side.innerHTML += cHtml + '<br>';

        if(data.skills.length) {
            let sHtml = `<div class="sec-head"><i class="fas fa-lightbulb"></i> مهارت‌ها</div>`;
            data.skills.forEach(s => {
                sHtml += `<div class="skill-item">
                            <div class="skill-info"><span>${s.title}</span><span>${s.val}%</span></div>
                            <div class="skill-track"><div class="skill-bar" style="width:${s.val}%"></div></div>
                          </div>`;
            });
            side.innerHTML += sHtml;
        }

        // پر کردن محتوا با صفحه بندی
        let main = pages[0].querySelector('#main-0');
        let blocks = [];
        if(data.about) blocks.push({type:'txt', title:'درباره من', txt:data.about, icon:'fa-user'});
        if(data.works.length) blocks.push({type:'list', title:'سوابق شغلی', items:data.works, icon:'fa-briefcase'});
        if(data.edus.length) blocks.push({type:'list', title:'تحصیلات', items:data.edus, icon:'fa-graduation-cap'});

        blocks.forEach(b => {
            let t = document.createElement('div');
            t.className = 'sec-head';
            t.innerHTML = `<i class="fas ${b.icon}"></i> ${b.title}`;
            main.appendChild(t);

            // چک ارتفاع برای تیتر
            let limit = cur === 0 ? 980 : 1080;
            if(main.scrollHeight > limit) {
                main.removeChild(t);
                cur++;
                pages.push(newPage(cur));
                zone.appendChild(pages[cur]);
                main = pages[cur].querySelector(`#main-${cur}`);
                main.appendChild(t);
                limit = 1080;
            }

            if(b.type === 'txt') {
                let p = document.createElement('p');
                p.className = 't-desc'; p.innerText = b.txt;
                main.appendChild(p);
            } else {
                b.items.forEach(it => {
                    let d = document.createElement('div');
                    d.className = 'timeline-box';
                    d.innerHTML = `<div class="t-title">${it.title}</div>
                                   <div class="t-sub">${it.sub}</div>
                                   <span class="t-date">${it.date}</span>
                                   <div class="t-desc">${it.desc}</div>`;
                    main.appendChild(d);

                    // چک ارتفاع برای هر آیتم
                    if(main.scrollHeight > limit) {
                        main.removeChild(d);
                        cur++;
                        pages.push(newPage(cur));
                        zone.appendChild(pages[cur]);
                        main = pages[cur].querySelector(`#main-${cur}`);
                        main.appendChild(d);
                    }
                });
            }
        });
    }

    // --- زوم و ذخیره ---
    let scale = 1;
    function autoFit() {
        const wrap = document.getElementById('prevWrap');
        if(wrap.clientWidth < 800) {
            scale = (wrap.clientWidth - 60) / 794; // 794px width of A4
        } else {
            scale = 1;
        }
        if(scale < 0.3) scale = 0.3; // جلوگیری از محو شدن کامل
        applyZoom();
    }
    
    function zoom(v) { scale += v; applyZoom(); }
    function applyZoom() {
        document.getElementById('renderZone').style.transform = `scale(${scale})`;
        document.getElementById('zoomTxt').innerText = Math.round(scale*100) + '%';
        // تنظیم حاشیه پایین برای اسکرول شدن صحیح
        document.getElementById('renderZone').style.marginBottom = `${(scale-1)*1000}px`; 
    }

    function saveJson() {
        let a = document.createElement('a');
        a.href = URL.createObjectURL(new Blob([JSON.stringify(data)],{type:'application/json'}));
        a.download = 'resume.json'; a.click();
    }
    function loadJson(el) {
        if(el.files[0]) {
            let r = new FileReader();
            r.onload = e => { data = JSON.parse(e.target.result); renderInputs(); render(); };
            r.readAsText(el.files[0]);
        }
    }

    // شروع برنامه
    window.onload = () => {
        renderInputs();
        render();
        setTimeout(() => {
            autoFit();
            document.getElementById('loading').style.opacity = '0';
            setTimeout(()=>document.getElementById('loading').style.display='none', 500);
        }, 500);
    };
    window.onresize = autoFit;

</script>
</body>
</html>
