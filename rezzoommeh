<div class="editor-sidebar">
    <div class="sidebar-header">
        <h2>تنظیمات رزومه</h2>
        <div style="font-size:12px; color:#666">نسخه حرفه‌ای</div>
    </div>

    <div class="sidebar-content">
        <div class="form-group">
            <h4><i class="fas fa-palette"></i> تم رنگی</h4>
            <div style="display:flex; gap:10px; align-items:center;">
                <label>رنگ اصلی:</label>
                <input type="color" value="#004a99" id="colorMain" oninput="changeTheme()" style="height:40px; padding:0; width:50px;">
                <label>رنگ دوم:</label>
                <input type="color" value="#00aaff" id="colorSec" oninput="changeTheme()" style="height:40px; padding:0; width:50px;">
            </div>
        </div>

        <div class="form-group">
            <h4><i class="fas fa-user"></i> اطلاعات پایه</h4>
            <input placeholder="نام کامل" id="in_name" oninput="update('name', this.value)">
            <input placeholder="عنوان شغلی (مثلاً طراح گرافیک)" id="in_job" oninput="update('job', this.value)">
            <textarea rows="4" placeholder="خلاصه درباره من..." id="in_about" oninput="update('about', this.value)"></textarea>
            
            <label class="btn btn-outline" style="cursor:pointer; margin-top:5px;">
                <i class="fas fa-camera"></i> آپلود عکس پروفایل
                <input type="file" style="display:none" onchange="updateImg(this)" accept="image/*">
            </label>
        </div>

        <div class="form-group">
            <h4><i class="fas fa-phone"></i> اطلاعات تماس</h4>
            <input placeholder="شماره موبایل" id="in_phone" oninput="update('phone', this.value)">
            <input placeholder="ایمیل" id="in_email" oninput="update('email', this.value)">
            <input placeholder="آدرس (شهر، کشور)" id="in_addr" oninput="update('addr', this.value)">
            <input placeholder="وبسایت / لینکدین" id="in_web" oninput="update('web', this.value)">
        </div>

        <div class="form-group">
            <h4><i class="fas fa-briefcase"></i> سوابق شغلی</h4>
            <div id="list_works"></div>
            <button class="btn btn-success" onclick="addItem('works')"><i class="fas fa-plus"></i> افزودن شغل</button>
        </div>

        <div class="form-group">
            <h4><i class="fas fa-graduation-cap"></i> سوابق تحصیلی</h4>
            <div id="list_edus"></div>
            <button class="btn btn-success" onclick="addItem('edus')"><i class="fas fa-plus"></i> افزودن مدرک</button>
        </div>

        <div class="form-group">
            <h4><i class="fas fa-lightbulb"></i> مهارت‌ها</h4>
            <div id="list_skills"></div>
            <button class="btn btn-success" onclick="addItem('skills')"><i class="fas fa-plus"></i> افزودن مهارت</button>
        </div>
    </div>

    <div class="action-bar">
        <button class="btn btn-primary" onclick="window.print()"><i class="fas fa-file-pdf"></i> دانلود PDF</button>
        <button class="btn btn-outline" onclick="saveData()"><i class="fas fa-save"></i> ذخیره پروژه</button>
        <input type="file" id="loadIn" style="display:none" onchange="loadData(this)" accept=".json">
        <button class="btn btn-outline" onclick="document.getElementById('loadIn').click()" style="grid-column: span 2;"><i class="fas fa-upload"></i> بازگردانی پروژه ذخیره شده</button>
    </div>
</div>

<div class="preview-wrapper" id="previewContainer">
    <div id="renderZone" style="transition: transform 0.2s ease;"></div>
    
    <div class="zoom-controls">
        <button class="zoom-btn" onclick="changeZoom(-0.1)"><i class="fas fa-minus"></i></button>
        <span id="zoomLabel" style="font-size:12px; width:40px; text-align:center;">Fit</span>
        <button class="zoom-btn" onclick="changeZoom(0.1)"><i class="fas fa-plus"></i></button>
    </div>
</div>

<script>
    // --- داده‌های پیش‌فرض ---
    let data = {
        name: "دانیال یوسفی",
        job: "مدیر توسعه نرم‌افزار",
        about: "متخصص در مدیریت پروژه‌های چابک و توسعه سیستم‌های مقیاس‌پذیر. علاقه‌مند به یادگیری تکنولوژی‌های جدید و حل مسائل پیچیده.",
        phone: "09121234567",
        email: "daniyal@example.com",
        addr: "تهران، ایران",
        web: "linkedin.com/in/daniyal",
        photo: "",
        works: [
            { id: 1, title: "سرپرست تیم فنی", sub: "دیجی‌تک", date: "1401 - اکنون", desc: "مدیریت تیم 10 نفره و بازنویسی زیرساخت‌های قدیمی شرکت." },
            { id: 2, title: "برنامه‌نویس ارشد", sub: "نوآوران", date: "1398 - 1401", desc: "توسعه پلتفرم فروش آنلاین با React و Node.js." }
        ],
        edus: [
            { id: 1, title: "کارشناسی ارشد نرم‌افزار", sub: "دانشگاه صنعتی شریف", date: "1396 - 1398", desc: "پایان‌نامه در زمینه هوش مصنوعی." }
        ],
        skills: [
            { id: 1, title: "JavaScript / React", val: 95 },
            { id: 2, title: "Node.js", val: 85 },
            { id: 3, title: "مدیریت پروژه (Scrum)", val: 90 }
        ]
    };

    // --- مدیریت زوم ---
    let currentZoom = 0.8;
    function autoFit() {
        const wrapper = document.getElementById('previewContainer');
        const width = wrapper.clientWidth;
        // A4 width is approx 794px at 96dpi (210mm)
        // We add some padding margins
        let scale = (width - 100) / 794; 
        if(scale > 1.2) scale = 1.2;
        if(scale < 0.3) scale = 0.3;
        currentZoom = scale;
        applyZoom();
    }
    
    function changeZoom(delta) {
        currentZoom += delta;
        applyZoom();
    }

    function applyZoom() {
        const zone = document.getElementById('renderZone');
        zone.style.transform = `scale(${currentZoom})`;
        // برای اینکه اسکرول درست کار کند باید margin را تنظیم کنیم
        // اما transform: scale فضای اشغال شده را تغییر نمیدهد.
        // راه حل ساده: transform-origin: top center
        document.getElementById('zoomLabel').innerText = Math.round(currentZoom * 100) + "%";
    }

    // --- مدیریت تم رنگی ---
    function changeTheme() {
        const main = document.getElementById('colorMain').value;
        const sec = document.getElementById('colorSec').value;
        document.documentElement.style.setProperty('--primary-color', main);
        document.documentElement.style.setProperty('--secondary-color', sec);
    }

    // --- آپدیت داده‌ها ---
    function update(key, val) { data[key] = val; render(); }
    
    function updateImg(input) {
        if(input.files && input.files[0]) {
            let r = new FileReader();
            r.onload = e => { data.photo = e.target.result; render(); }
            r.readAsDataURL(input.files[0]);
        }
    }

    function addItem(type) {
        let newItem = type === 'skills' 
            ? { id: Date.now(), title: "مهارت جدید", val: 50 } 
            : { id: Date.now(), title: "عنوان شغلی/مدرک", sub: "نام شرکت/دانشگاه", date: "تاریخ", desc: "توضیحات مختصر..." };
        data[type].push(newItem);
        renderInputs(); render();
    }

    function delItem(type, id) {
        data[type] = data[type].filter(x => x.id != id);
        renderInputs(); render();
    }

    function updateList(type, id, key, val) {
        let item = data[type].find(x => x.id == id);
        if(item) { item[key] = val; render(); }
    }

    // --- رندر ورودی‌ها (پنل راست) ---
    function renderInputs() {
        document.getElementById('in_name').value = data.name || "";
        document.getElementById('in_job').value = data.job || "";
        document.getElementById('in_about').value = data.about || "";
        document.getElementById('in_phone').value = data.phone || "";
        document.getElementById('in_email').value = data.email || "";
        document.getElementById('in_addr').value = data.addr || "";
        document.getElementById('in_web').value = data.web || "";

        const createListHTML = (type, isSkill) => {
            let html = "";
            data[type].forEach(item => {
                if(isSkill) {
                    html += `
                        <div style="background:#f8f9fa; padding:10px; border-radius:5px; margin-bottom:5px; border:1px solid #eee;">
                            <div style="display:flex; gap:5px;">
                                <input value="${item.title}" oninput="updateList('${type}', ${item.id}, 'title', this.value)" placeholder="نام مهارت" style="flex:2">
                                <input type="number" value="${item.val}" oninput="updateList('${type}', ${item.id}, 'val', this.value)" style="flex:1" max="100">
                            </div>
                            <button class="btn-danger" onclick="delItem('${type}', ${item.id})">حذف</button>
                        </div>`;
                } else {
                    html += `
                        <div style="background:#f8f9fa; padding:10px; border-radius:5px; margin-bottom:5px; border:1px solid #eee;">
                            <input value="${item.title}" oninput="updateList('${type}', ${item.id}, 'title', this.value)" placeholder="عنوان" style="font-weight:bold">
                            <div style="display:flex; gap:5px;">
                                <input value="${item.sub}" oninput="updateList('${type}', ${item.id}, 'sub', this.value)" placeholder="موسسه">
                                <input value="${item.date}" oninput="updateList('${type}', ${item.id}, 'date', this.value)" placeholder="تاریخ">
                            </div>
                            <textarea oninput="updateList('${type}', ${item.id}, 'desc', this.value)" placeholder="توضیحات" rows="2">${item.desc}</textarea>
                            <button class="btn-danger" onclick="delItem('${type}', ${item.id})">حذف</button>
                        </div>`;
                }
            });
            document.getElementById('list_' + type).innerHTML = html;
        };

        createListHTML('works', false);
        createListHTML('edus', false);
        createListHTML('skills', true);
    }

    // --- رندر اصلی (Preview) ---
    function render() {
        const zone = document.getElementById('renderZone');
        zone.innerHTML = ""; // پاک کردن قبلی

        // تابع ساخت صفحه خام
        const createPage = (pageNum) => {
            let div = document.createElement('div');
            div.className = pageNum === 0 ? 'a4-page' : 'a4-page page-break';
            div.innerHTML = `
                <div class="header-top">
                    <div class="wave-bg-2"></div>
                    <div class="wave-bg"></div>
                    <div class="header-content">
                        <div class="header-info">
                            <h1>${data.name}</h1>
                            <p>${data.job}</p>
                        </div>
                        ${pageNum === 0 && data.photo ? `<img src="${data.photo}" class="profile-img">` : ''}
                    </div>
                </div>
                <div class="main-body">
                    <div class="col-right" id="right-${pageNum}"></div>
                    <div class="col-left" id="left-${pageNum}"></div>
                </div>
            `;
            return div;
        };

        let pages = [];
        let curPage = 0;
        
        // ایجاد صفحه اول
        pages.push(createPage(0));
        zone.appendChild(pages[0]);

        // --- پر کردن ستون راست (اطلاعات جانبی) ---
        // برای سادگی فرض می‌کنیم ستون راست در صفحه اول جا می‌شود (معمولاً همینطور است)
        const rightCol = pages[0].querySelector('#right-0');
        
        let contactHTML = `<div class="section-title"><i class="fas fa-address-card"></i> تماس</div>`;
        if(data.phone) contactHTML += `<div class="contact-item"><span>${data.phone}</span> <i class="fas fa-mobile-alt"></i></div>`;
        if(data.email) contactHTML += `<div class="contact-item"><span>${data.email}</span> <i class="fas fa-envelope"></i></div>`;
        if(data.addr) contactHTML += `<div class="contact-item"><span>${data.addr}</span> <i class="fas fa-map-marker-alt"></i></div>`;
        if(data.web) contactHTML += `<div class="contact-item"><span>${data.web}</span> <i class="fas fa-globe"></i></div>`;
        
        rightCol.innerHTML += contactHTML + "<br>";

        if(data.skills.length > 0) {
            let skillHTML = `<div class="section-title"><i class="fas fa-star"></i> مهارت‌ها</div>`;
            data.skills.forEach(s => {
                skillHTML += `
                    <div class="skill-box">
                        <div class="skill-header"><span>${s.title}</span><span>${s.val}%</span></div>
                        <div class="progress-bar"><div class="progress-fill" style="width:${s.val}%"></div></div>
                    </div>`;
            });
            rightCol.innerHTML += skillHTML;
        }

        // --- پر کردن ستون چپ (محتوای اصلی) با صفحه‌بندی ---
        let leftCol = pages[0].querySelector('#left-0');
        
        // بلوک‌های محتوا
        let contentBlocks = [];
        if(data.about) contentBlocks.push({type:'text', title:'درباره من', icon:'fa-user-circle', txt: data.about});
        if(data.works.length) contentBlocks.push({type:'list', title:'سوابق شغلی', icon:'fa-briefcase', items: data.works});
        if(data.edus.length) contentBlocks.push({type:'list', title:'سوابق تحصیلی', icon:'fa-graduation-cap', items: data.edus});

        contentBlocks.forEach(block => {
            // تیتر بخش
            let titleDiv = document.createElement('div');
            titleDiv.className = 'section-title';
            titleDiv.innerHTML = `<i class="fas ${block.icon}"></i> ${block.title}`;
            leftCol.appendChild(titleDiv);

            // چک کردن ارتفاع بعد از اضافه کردن تیتر
            // ارتفاع امن محتوا حدود 1000 پیکسل است (منهای هدر و مارجین)
            // در صفحه دوم به بعد هدر نداریم، فضا بیشتر است
            let limit = curPage === 0 ? 950 : 1050;
            
            if(leftCol.getBoundingClientRect().height > limit) {
                // اگر تیتر جا نشد، ببر صفحه بعد
                leftCol.removeChild(titleDiv);
                curPage++;
                pages.push(createPage(curPage));
                zone.appendChild(pages[curPage]);
                leftCol = pages[curPage].querySelector(`#left-${curPage}`);
                leftCol.appendChild(titleDiv);
                limit = 1050; // آپدیت لیمیت برای صفحه جدید
            }

            // محتوای بخش
            if(block.type === 'text') {
                let p = document.createElement('p');
                p.className = 'job-desc';
                p.innerText = block.txt;
                leftCol.appendChild(p);
            } else {
                block.items.forEach(item => {
                    let itemDiv = document.createElement('div');
                    itemDiv.className = 'timeline-item';
                    itemDiv.innerHTML = `
                        <div class="job-title">${item.title}</div>
                        <div class="job-company">${item.sub}</div>
                        <span class="job-date">${item.date}</span>
                        <div class="job-desc">${item.desc}</div>
                    `;
                    leftCol.appendChild(itemDiv);

                    // چک کردن شکست صفحه برای هر آیتم
                    if(leftCol.scrollHeight > limit) {
                         leftCol.removeChild(itemDiv);
                         curPage++;
                         pages.push(createPage(curPage));
                         zone.appendChild(pages[curPage]);
                         leftCol = pages[curPage].querySelector(`#left-${curPage}`);
                         leftCol.appendChild(itemDiv);
                         limit = 1050;
                    }
                });
            }
        });
    }

    // --- ذخیره و بازیابی ---
    function saveData() {
        let json = JSON.stringify(data);
        let blob = new Blob([json], {type: "application/json"});
        let url = URL.createObjectURL(blob);
        let a = document.createElement('a');
        a.href = url;
        a.download = `Resume-${data.name}.json`;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
    }

    function loadData(input) {
        if(!input.files[0]) return;
        let r = new FileReader();
        r.onload = e => {
            try {
                data = JSON.parse(e.target.result);
                renderInputs();
                render();
            } catch(err) { alert('فایل نامعتبر است'); }
        }
        r.readAsText(input.files[0]);
    }

    // شروع
    renderInputs();
    render();
    
    // فیت کردن زوم در شروع با کمی تاخیر
    setTimeout(autoFit, 100);
    window.addEventListener('resize', autoFit);

</script>
</body>
</html>
