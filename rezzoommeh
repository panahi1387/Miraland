        }
        .group-box h4 { margin: 0 0 15px 0; color: #1e293b; border-bottom: 2px solid #f1f5f9; padding-bottom: 8px; font-size: 14px; }

        input, textarea {
            width: 100%; padding: 10px; margin-bottom: 10px;
            border: 1px solid #e2e8f0; border-radius: 6px;
            font-family: 'Vazir'; font-size: 13px; background: #f8fafc;
            transition: 0.2s;
        }
        input:focus, textarea:focus { border-color: var(--primary-color); background: #fff; box-shadow: 0 0 0 2px rgba(37,99,235,0.1); }

        .btn {
            padding: 10px; border: none; border-radius: 6px; cursor: pointer;
            font-family: 'Vazir'; font-size: 13px; font-weight: bold; width: 100%;
            display: flex; align-items: center; justify-content: center; gap: 8px;
            margin-bottom: 5px; transition: 0.2s;
        }
        .btn:hover { transform: translateY(-1px); }
        .btn-primary { background: var(--primary-color); color: white; }
        .btn-success { background: #10b981; color: white; }
        .btn-danger { background: #ef4444; color: white; width: auto; padding: 4px 10px; font-size: 11px; }
        .btn-outline { background: #fff; border: 1px solid var(--border-color); color: #64748b; }

        /* --- محیط پیش‌نمایش (چپ) --- */
        .preview-wrapper {
            flex: 1;
            background: var(--bg-preview);
            display: flex;
            justify-content: center;
            align-items: flex-start; /* تغییر مهم: جلوگیری از وسط چین شدن عمودی که باعث پرش میشه */
            overflow: auto;
            position: relative;
            padding: 50px;
        }

        /* دکمه‌های زوم شناور */
        .zoom-controls {
            position: fixed; bottom: 30px; left: 50%; transform: translateX(-50%);
            background: #fff; padding: 8px 15px; border-radius: 50px;
            display: flex; gap: 15px; align-items: center;
            box-shadow: 0 5px 20px rgba(0,0,0,0.15); z-index: 200;
        }
        .zoom-btn { background: none; border: none; cursor: pointer; font-size: 16px; color: #475569; }
        .zoom-btn:hover { color: var(--primary-color); }

        /* --- کاغذ A4 --- */
        .a4-page {
            width: 210mm;
            min-height: 297mm;
            background: white;
            box-shadow: 0 10px 40px rgba(0,0,0,0.1);
            position: relative;
            overflow: hidden;
            display: flex; flex-direction: column;
            margin-bottom: 40px;
            transform-origin: top center; /* زوم از بالا انجام میشه */
        }

        /* --- طراحی داخلی رزومه --- */
        .header-top { height: 170px; position: relative; background: #f8fafc; }
        .shape-1 {
            position: absolute; top: 0; left: 0; width: 100%; height: 100%;
            background: var(--primary-color);
            clip-path: polygon(0 0, 100% 0, 100% 75%, 0 100%);
        }
        .shape-2 {
            position: absolute; top: 0; left: 0; width: 100%; height: 100%;
            background: var(--secondary-color); opacity: 0.5;
            clip-path: polygon(0 0, 100% 0, 100% 65%, 0 90%);
        }

        .header-content {
            position: relative; z-index: 10; padding: 35px 40px;
            display: flex; justify-content: space-between; align-items: flex-start;
        }
        .header-txt { color: white; width: 65%; }
        .header-txt h1 { margin: 0; font-size: 34px; font-weight: 900; letter-spacing: -1px; }
        .header-txt p { margin: 8px 0 0 0; font-size: 18px; opacity: 0.95; font-weight: 300; }

        .user-photo {
            width: 130px; height: 130px; border-radius: 50%;
            border: 5px solid white; background: #fff;
            object-fit: cover; box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            position: relative; top: 10px;
        }

        .main-body { display: flex; flex: 1; }
        .col-side { width: 35%; background: #f8fafc; border-left: 1px solid #e2e8f0; padding: 50px 25px 30px; }
        .col-main { width: 65%; padding: 40px 35px; }

        .sec-head {
            font-size: 15px; font-weight: 800; color: #334155;
            border-bottom: 2px solid var(--secondary-color);
            padding-bottom: 8px; margin-bottom: 15px;
            display: flex; align-items: center; gap: 10px;
        }
        .sec-head i { color: var(--secondary-color); font-size: 16px; }

        /* آیتم‌های تماس */
        .contact-row {
            display: flex; align-items: center; justify-content: flex-end; gap: 10px;
            margin-bottom: 12px; font-size: 12px; color: #475569;
        }
        .contact-row i { color: var(--primary-color); width: 20px; text-align: center; }

        /* مهارت */
        .skill-item { margin-bottom: 15px; }
        .skill-info { display: flex; justify-content: space-between; font-size: 12px; margin-bottom: 5px; font-weight: 600; color: #475569; }
        .skill-track { width: 100%; height: 6px; background: #e2e8f0; border-radius: 10px; overflow: hidden; }
        .skill-bar { height: 100%; background: var(--primary-color); border-radius: 10px; }

        /* تایم‌لاین */
        .timeline-box {
            position: relative; padding-right: 20px; margin-bottom: 30px;
            border-right: 2px solid #f1f5f9;
        }
        .timeline-box::before {
            content: ''; position: absolute; right: -6px; top: 6px;
            width: 10px; height: 10px; background: var(--secondary-color);
            border-radius: 50%; ring: 4px solid white;
        }
        .t-title { font-weight: bold; font-size: 14px; color: #0f172a; }
        .t-sub { font-size: 12px; color: var(--primary-color); font-weight: 600; margin: 3px 0; }
        .t-date { font-size: 11px; color: #94a3b8; display: block; margin-bottom: 8px; }
        .t-desc { font-size: 13px; color: #334155; line-height: 1.7; text-align: justify; }

        /* چاپ */
        @media print {
            body { background: white; display: block; height: auto; overflow: visible; }
            .editor-sidebar, .zoom-controls, #loading { display: none !important; }
            .preview-wrapper { padding: 0; display: block; background: white; }
            .a4-page { margin: 0; box-shadow: none; page-break-after: always; transform: none !important; width: 100%; }
        }
